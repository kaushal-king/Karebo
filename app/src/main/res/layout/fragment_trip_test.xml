<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sw_trip"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TripTest">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <TextView
           android:id="@+id/tv_"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:fontFamily="@font/roboto_medium"
           android:text="Trip Test : 5649 3153 7254 5031 3471"
           android:textColor="@color/black"
           app:layout_constrainedWidth="true"
           android:textSize="@dimen/_16sdp"
           android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.08"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />



       <LinearLayout
           android:id="@+id/ll_major_appliance"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_20sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/tv_">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Confirm all Appliances are switched-ON"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">

               <Switch
                   android:id="@+id/sw_major_appliance"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />


           </LinearLayout>

       </LinearLayout>




       <LinearLayout
           android:id="@+id/ll_still_on"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_major_appliance">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Did the Voltage Stick Beep ?"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">
               <Switch
                   android:id="@+id/sw_stick_beep"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />

           </LinearLayout>

       </LinearLayout>




       <LinearLayout
           android:id="@+id/ll_seals_broken"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_still_on">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Are the Seals Broken"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">
               <Switch
                   android:id="@+id/sw_seals_broken"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />


           </LinearLayout>

       </LinearLayout>




       <LinearLayout
           android:id="@+id/ll_seal_number"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_seals_broken">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Existing Seal Numbers1"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionwithoutpadding"
               android:gravity="center">

               <EditText
                   android:id="@+id/et_seal_number1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:fontFamily="@font/roboto_medium"
                   android:gravity="left"

                   android:textColor="@color/black"

                   />

           </LinearLayout>

       </LinearLayout>



       <LinearLayout
           android:id="@+id/ll_seal_number2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_seal_number">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Existing Seal Numbers2"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionwithoutpadding"
               android:gravity="center">

               <EditText
                   android:id="@+id/et_seal_number2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:fontFamily="@font/roboto_medium"
                   android:gravity="left"

                   android:textColor="@color/black"

                   />

           </LinearLayout>

       </LinearLayout>





       <LinearLayout
           android:id="@+id/ll_replace_seals"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_seal_number2">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Did You replace the seals ?"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">
               <Switch
                   android:id="@+id/sw_replace_seals"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />

           </LinearLayout>

       </LinearLayout>



       <LinearLayout
           android:id="@+id/ll_new_seal_number1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:visibility="gone"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_replace_seals">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="New Seal Numbers1"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionwithoutpadding"
               android:gravity="center">

               <EditText
                   android:id="@+id/et_new_seal_number1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:fontFamily="@font/roboto_medium"
                   android:gravity="left"

                   android:textColor="@color/black"

                   />

           </LinearLayout>

       </LinearLayout>



       <LinearLayout
           android:id="@+id/ll_new_seal_number2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           android:visibility="gone"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_new_seal_number1">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="New Seal Numbers2"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionwithoutpadding"
               android:gravity="center">

               <EditText
                   android:id="@+id/et_new_seal_number2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:fontFamily="@font/roboto_medium"
                   android:gravity="left"

                   android:textColor="@color/black"

                   />

           </LinearLayout>

       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_tampering"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_new_seal_number2">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Any visible sign of tampering?"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">
               <Switch
                   android:id="@+id/sw_tampering"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />

           </LinearLayout>

       </LinearLayout>


       <LinearLayout
           android:id="@+id/ll_temper_images"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:visibility="gone"
           android:layout_marginHorizontal="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_tampering"
           >

           <ImageView
               android:id="@+id/iv_tampring_photo"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_130sdp"
               android:layout_gravity="center"
               android:visibility="gone"
               android:layout_weight="1"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ll_tampering" />

           <ImageView
               android:id="@+id/iv_tampring_photo2"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_130sdp"
               android:layout_gravity="center"
               android:visibility="gone"
               android:layout_weight="1"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ll_tampering" />

           <ImageView
               android:id="@+id/iv_tampring_photo3"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_130sdp"
               android:layout_gravity="center"
               android:visibility="gone"
               android:layout_weight="1"
               android:layout_marginHorizontal="@dimen/_10sdp"
               android:layout_marginTop="@dimen/_10sdp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ll_tampering" />
       </LinearLayout>



       <Button
           android:id="@+id/bt_img_tampring"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           android:visibility="gone"
           android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:background="@drawable/search_cor"
           android:fontFamily="@font/roboto_medium"
           android:text="Tamper Picture 1"
           android:textSize="@dimen/_16sdp"
           app:backgroundTint="@null"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_temper_images" />


       <Button
           android:id="@+id/bt_img_tampring2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           android:visibility="gone"
           android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:background="@drawable/search_cor"
           android:fontFamily="@font/roboto_medium"
           android:text="Tamper Picture 2"
           android:textSize="@dimen/_16sdp"
           app:backgroundTint="@null"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/bt_img_tampring" />


       <Button
           android:id="@+id/bt_img_tampring3"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           android:visibility="gone"
           android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:background="@drawable/search_cor"
           android:fontFamily="@font/roboto_medium"
           android:text="Tamper Picture 3"
           android:textSize="@dimen/_16sdp"
           app:backgroundTint="@null"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/bt_img_tampring2" />


       <LinearLayout
           android:id="@+id/ll_power_limit"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/bt_img_tampring3">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Power Limit Setting"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">

               <Spinner
                   android:id="@+id/sp_power_limit"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:entries="@array/powerlimit" />
           </LinearLayout>

       </LinearLayout>



       <LinearLayout
           android:id="@+id/ll_appliance_off"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_10sdp"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/_10sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_power_limit">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1.3"
               android:background="@drawable/questionback"
               android:backgroundTint="#E4E1E1">

               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto_medium"
                   android:text="Are All appliances switched OFF"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_13sdp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="2"
               android:background="@drawable/questionback"
               android:gravity="center">
               <Switch
                   android:id="@+id/sw_appliance_off"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   />

           </LinearLayout>

       </LinearLayout>


       <Button
           android:id="@+id/bt_next"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_40sdp"
           android:layout_marginHorizontal="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:background="@drawable/search_cor"
           android:fontFamily="@font/roboto_medium"
           android:text="Next"
           android:textSize="@dimen/_16sdp"
           app:backgroundTint="@null"
           android:layout_marginBottom="@dimen/_20sdp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/ll_appliance_off" />


   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>