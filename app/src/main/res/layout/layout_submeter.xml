<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_description_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/questionback"
        android:fontFamily="@font/roboto_medium"
        android:gravity="left"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Description"
        android:padding="@dimen/_8sdp"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_is_tenant" />

    <ImageView
        android:id="@+id/iv_description_photo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:visibility="visible"
        android:src="@drawable/addphoto"
        />


    <Button
        android:id="@+id/bt_image_submeter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/search_cor"
        android:fontFamily="@font/roboto_medium"
        android:text="Add Photo"
        android:visibility="visible"
        android:textSize="@dimen/_16sdp"
        app:backgroundTint="@null" />

</LinearLayout>